{
  "name": "modular-vue-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:modules": "vitest test/ModuleTestRunner.ts",
    "test:enhanced": "vitest test/ModuleTestRunner.enhanced.ts",
    "test:user-access": "vitest test/UserRoleAccess.spec.ts",
    "test:zip-validator": "vitest test/ZipValidator.spec.ts",
    "test:login": "vitest test/LoginFunction.spec.ts",
    "test:self-tests": "vitest test/modules/**/*.spec.ts",
    "test:all": "ts-node test/runAllTests.ts",
    "test:report": "npm run test:all && echo 'Reports generated in ./test-results/'",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.16",
    "@heroicons/vue": "^2.0.18",
    "jszip": "^3.10.1",
    "pinia": "^2.1.7",
    "semver": "^7.5.4",
    "vue": "^3.4.38",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@types/jszip": "^3.4.1",
    "@types/node": "^20.0.0",
    "@types/semver": "^7.5.6",
    "@vitejs/plugin-vue": "^5.1.3",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "vite": "^5.4.2",
    "vitest": "^1.0.0",
    "vue-tsc": "^2.1.4"
  }
}
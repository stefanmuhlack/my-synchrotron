{
  "name": "sgblock-platform",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:modules": "vitest test/ModuleTestRunner.ts",
    "test:enhanced": "vitest test/ModuleTestRunner.enhanced.ts",
    "test:user-access": "vitest test/UserRoleAccess.spec.ts",
    "test:zip-validator": "vitest test/ZipValidator.spec.ts",
    "test:login": "vitest test/LoginFunction.spec.ts",
    "test:self-tests": "vitest test/modules/**/*.spec.ts",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "backend:dev": "cd backend && npm run dev",
    "backend:build": "cd backend && npm run build",
    "backend:start": "cd backend && npm start",
    "backend:test": "cd backend && npm test",
    "backend:seed": "cd backend && npm run db:seed",
    "backend:migrate": "cd backend && npm run db:migrate",
    "backend:backup": "cd backend && npm run db:backup",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose up -d",
    "docker:prod:build": "docker-compose up -d --build",
    "docker:prod:down": "docker-compose down",
    "setup:dev": "npm install && cd backend && npm install",
    "setup:env": "cp .env.sample .env && cp backend/.env.example backend/.env",
    "setup:db": "npm run backend:seed",
    "setup:full": "npm run setup:dev && npm run setup:env && npm run setup:db",
    "clean": "rm -rf dist backend/dist node_modules backend/node_modules",
    "clean:docker": "docker-compose down -v && docker system prune -f",
    "analyze": "bash scripts/analyze-codebase.sh",
    "quality": "npm run lint && npm run test && npm run analyze",
    "module:generate": "ts-node src/tools/module-generator.ts",
    "module:validate": "ts-node src/core/quality-gates.ts"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.16",
    "@heroicons/vue": "^2.0.18",
    "jszip": "^3.10.1",
    "pinia": "^2.1.7",
    "semver": "^7.5.4",
    "vue": "^3.4.38",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@types/jszip": "^3.4.1",
    "@types/node": "^20.0.0",
    "@types/semver": "^7.5.6",
    "@vitejs/plugin-vue": "^5.1.3",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "vite": "^5.4.2",
    "vitest": "^1.0.0",
    "vue-tsc": "^2.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}